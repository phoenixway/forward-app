    {
      "type": "npm", // Тип задачі - npm
      "script": "start", // Назва npm-скрипта, який потрібно виконати
      "problemMatcher": [], // Можна залишити порожнім або налаштувати для виявлення помилок
      "label": "npm: start", // Назва задачі, яка буде відображатися в VS Code
      "detail": "electron-forge start", // Опис задачі (опціонально, тут вказано, що зазвичай робить start)
