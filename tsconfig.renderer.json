{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false, // <--- ЗМІНА: Спробуємо false для глибшої перевірки
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": true,
    "types": ["react", "react-dom", "node"] // <--- ДОДАНО: Явно вказуємо типи
  },
  "include": [
    "src/renderer/**/*",
    "src/shared/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "release_builds",
    "src/main/**/*"
  ]
}